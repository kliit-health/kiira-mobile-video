{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["es2015","esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "noEmit": true,
        "target": "esnext",
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "strict": false
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "baseUrl": "./src",   // all paths are relative to the baseUrl
    "paths": {
      "~/*": ["*"]        // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
    }
}