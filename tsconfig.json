{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["es2015", "esnext", "ES2021"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "noEmit": true,
        "target": "ES2021",
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "strict": false,
        "baseUrl": "./src",
        "paths": {
            "~/*": ["*"]
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
