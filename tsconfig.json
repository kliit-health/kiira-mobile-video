{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["es6"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "noEmit": true,
        "target": "esnext",
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "strict": false
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "paths": {
        "redux_app": ["./src/redux/"],
        "utils": ["./src/utils/"],
        "i18n": ["./src/i18n/"],
        "components": ["./src/components/"],
        "models": ["./src/models"]
    }
}